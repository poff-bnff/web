                                        //-     a(href= `/${lang_path}${article_type}/${subMenuItem.poffi_article.slug}`)= `---> ${subMenuItem.name}`
                                else
                                    if subMenuItem.customUrl
                                        li
                                            a(href= `/${lang_path}${subMenuItem.customUrl}/`)= `${subMenuItem.name}`
                else
                    li
                        a(href= `/${lang_path}${mainMenuItem.customUrl}/`)= `${mainMenuItem.name}`


