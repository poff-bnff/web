#navigation
    background rgb(77, 77, 77)
    z-index 100

    a
        color rgb(34, 34, 34)
        text-decoration none

        &:hover
            color rgb(115, 115, 115)
            text-decoration none

            img
                filter grayscale(0%)

        &.active
            color rgb(115, 115, 115)
            background rgb(65, 65, 65)

            img
                filter grayscale(0%)

        h3
            font-weight 800
            font-size 11pt
            line-height 13pt

        img
            filter grayscale(100%)

        p
            font-size 8pt
            line-height 10pt
            text-transform uppercase

#text-locale
    background rgb(6, 6, 6)
    color rgb(255, 255, 255)

    a
        color rgb(255, 255, 255)
        font-family 'Montserrat', sans-serif
        font-style normal
        font-weight 700
        font-size 13pt
        line-height 22pt
        text-transform uppercase

        @media (max-width: 768px)
            font-size 13pt
            line-height 15pt
