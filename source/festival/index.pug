    section.team
        h1.section_headline= self.label.all.festivalTeam

            //- section.sub_team
        each team in self.data.teams
            - var teamId = team.id
            each subTeam in team.subTeam.sort(function(a, b){ return (a.order > b.order) ? 1 : ((b.order > a.order) ? -1 : 0); })
                p= `Team ${teamId}: ${subTeam.name}`
                each teamMember in subTeam.teamMember
                    .person
                        .person_head
                            - var assetsDir = '/assets/img/img_persons/'
                            if teamMember.pictureAtTeam
                                - var personPic = assetsDir + teamMember.pictureAtTeam[0].hash + teamMember.pictureAtTeam[0].ext
                            else if teamMember.person.picture
                                - var personPic = assetsDir + teamMember.person.picture.hash + teamMember.person.picture.ext
                            else
                                - var personPic ='/assets/img/img_persons/hunt_person.png'
                            img.person_img(src= personPic alt= `${teamMember.person.firstName} ${teamMember.person.lastName}`)


                                //- if val.personName
                                .person_body.text_center
                                    h4.text_center= `${teamMember.person.firstName} ${teamMember.person.lastName}`
                                    //- p.premiere_type.text_center= val.personOrganisation
                                    +format(teamMember.roleAtTeam)
