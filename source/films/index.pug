extends /_templates/layout.pug

block content



    if self.data.films
        main.grid_films
            each val in self.data.films
                a.card_film(href= `/${lang_path}film/${val.slug}`)
                    .container_frame_16_9
                        if self.data.pictures.filmslugs[val.path]
                            if self.data.pictures.filmslugs[val.path].poster
                                img.container_contents_16_9(src=`/assets/img/dynamic/img_films/${val.path}/${self.data.pictures.filmslugs[val.path].poster}` alt = val[`filmTitle_${self.locale}`])
                            else
                                img.container_contents_16_9(src='/assets/img/static/placeholder_hd_1.jpg' alt = val[`filmTitle_${self.locale}`])
                        else
                            img.container_contents_16_9(src='/assets/img/static/placeholder_hd_1.jpg' alt = val[`filmTitle_${self.locale}`])
                    .card_film_title
                        h3.film_title_locale= val.title
                    .card_film_info
                        each p, locale in self.otherLocalePaths
                            if val[`title_${locale}`]
                                .str_info_grid_3
                                    .str_info_label= self.label.film.titleSec
                                    .str_info_value= val[`title_${locale}`]
                        if val.credentials.director
                            .str_info_grid_3
                                .str_info_label= self.label.film.director
                                .str_info_value= val.credentials.director.join(', ')
                        if val.credentials.cast
                            .str_info_grid_3
                                .str_info_label= self.label.film.cast
                                .str_info_value= val.credentials.cast.join(', ')

